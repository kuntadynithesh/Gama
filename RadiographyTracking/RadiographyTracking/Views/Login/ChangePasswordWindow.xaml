<controls:ChildWindow
  x:Class="RadiographyTracking.LoginUI.ChangePasswordWindow"
  x:Name="childWindow" 
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
  xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
  xmlns:local="clr-namespace:RadiographyTracking.LoginUI"
  MinWidth="400" 
  Title="Change Password"
  Style="{StaticResource LogRegWindowStyle}"
  Closing="ChangePasswordWindow_Closing">

    <Grid x:Name="LayoutRoot" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <local:ChangePassword x:Name="changePasswordForm" Grid.Row="0"/>
        <!--<local:RegistrationForm x:Name="registrationForm" Grid.Row="0" />-->

    </Grid>

</controls:ChildWindow>